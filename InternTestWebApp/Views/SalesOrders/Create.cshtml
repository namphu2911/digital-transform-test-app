@model InternTestWebApp.Models.SalesOrders
@{
    ViewData["Title"] = "Create";
}
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Create Sales Order</h2>
    </div>
</div>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SalesOrder" class="control-label"></label>
                <input asp-for="SalesOrder" class="form-control" />
                <span asp-validation-for="SalesOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesOrderItem" class="control-label"></label>
                <input asp-for="SalesOrderItem" class="form-control" />
                <span asp-validation-for="SalesOrderItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkOrder" class="control-label"></label>
                <input asp-for="WorkOrder" class="form-control" />
                <span asp-validation-for="WorkOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductID" class="control-label"></label>
                <input asp-for="ProductID" class="form-control" />
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderQuantity" class="control-label"></label>
                <input asp-for="OrderQuantity" class="form-control" />
                <span asp-validation-for="OrderQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatus" class="control-label"></label>
                <input asp-for="OrderStatus" class="form-control" />
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timestamp" class="control-label"></label>
                <input asp-for="Timestamp" class="form-control" />
                <span asp-validation-for="Timestamp" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
